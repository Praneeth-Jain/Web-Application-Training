@page "/Register"
@model LoginPage.Pages.RegisterModel
@{
}



<h2>User Registration</h2>



<form method="post" enctype="multipart/form-data" >
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="RegistredUser.Username" class="control-label"></label>
        <input asp-for="RegistredUser.Username" class="form-control" />
        <span asp-validation-for="RegistredUser.Username" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RegistredUser.Email" class="control-label"></label>
        <input asp-for="RegistredUser.Email" class="form-control" />
        <span asp-validation-for="RegistredUser.Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RegistredUser.Password" class="control-label"></label>
        <input asp-for="RegistredUser.Password" class="form-control" type="password" />
        <span asp-validation-for="RegistredUser.Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RegistredUser.ConfirmPassword" class="control-label"></label>
        <input asp-for="RegistredUser.ConfirmPassword" class="form-control" type="password" />
        <span asp-validation-for="RegistredUser.ConfirmPassword" class="text-danger"></span>
    </div>

    <div class="form-group">       
            <label asp-for="RegistredUser.Age" class="control-label">Age :</label>
            <input asp-for="RegistredUser.Age" class="form-control" />
            <span asp-validation-for="RegistredUser.Age" class="text-danger"></span>
    </div>
     <div class="form-group">
        <label asp-for="RegistredUser.SelectGender" class="control-label">Gender</label>
        <select  asp-for="RegistredUser.SelectGender" asp-items="Model.RegistredUser.Gender" class="form-control" >
            <option value="">Select the Gender</option>
        </select>
        <span asp-validation-for="RegistredUser.SelectGender" class="text-danger"></span>
    </div>

    <div class="form-group mt-3 mb-3">
        <label asp-for="RegistredUser.Image" class="control-label">Display Picture</label>
        <input asp-for="RegistredUser.Image" type="file" class="form-control"  />
    </div>
 
    <button type="submit" class="btn btn-primary">Register</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

